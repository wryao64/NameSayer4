<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="border-pane" stylesheets="@../../css/styles.css" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox alignment="CENTER" prefHeight="120.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="title" text="Relax with some cute animal pictures!">
                    <font>
                        <Font size="36.0" />
                    </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
                </Label>
            <Label fx:id="aboutText" text="Top text">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            </children>
        </VBox>
    </top>
   <center>
      <ImageView fx:id="imageView" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="30.0" />
         </BorderPane.margin></ImageView>
   </center>
   <left>
      <Button fx:id="previousButton" mnemonicParsing="false" onAction="#previous" text="&lt;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="150.0" />
         </BorderPane.margin>
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </left>
   <right>
      <Button fx:id="nextButton" mnemonicParsing="false" onAction="#next" text="&gt;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets right="150.0" />
         </BorderPane.margin>
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </right>
   <bottom>
      <Button mnemonicParsing="false" onAction="#backButtonPress" text="Back to Practicing :(" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="35.0" />
         </BorderPane.margin>
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </bottom>
</BorderPane>
